<%= form_with(model: @tweet, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweet.errors.count %> errors occurred.</h2>
      <ul>
      <% @tweet.errors.full_tweet.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tweet_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <br>
  <%= form.submit %>
<% end %>
<%= link_to "Return to List of tweets", tweets_path %>
